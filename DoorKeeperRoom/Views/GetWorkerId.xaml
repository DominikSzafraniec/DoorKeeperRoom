<Window x:Class="DoorKeeperRoom.Views.GetWorkerId"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoorKeeperRoom.Views"
        mc:Ignorable="d"
        Title="Wymagany numer pracownika" Height="142.8" Width="300" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock Text="Jest kilku pracowników o tym imieniu i nazwisku." />
        <TextBlock Text="Podaj nr. pracownika:" />
        <TextBox MaxLength="4"  x:Name="ResponseTextBox" />
        <Button Margin="0 10 0 0" Content="OK" Click="OKButton_Click" />
    </StackPanel>
</Window>
