<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoorKeeperRoom.Views"
        xmlns:Models="clr-namespace:DoorKeeperRoom.Models" x:Class="DoorKeeperRoom.Views.KeysView"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800" Background="white" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <CollectionViewSource x:Key="keysViewSource" d:DesignSource="{d:DesignInstance {x:Type Models:keys}, CreateList=True}"/>
    </UserControl.Resources>
    <StackPanel DataContext="{StaticResource keysViewSource}">
        <Label FontSize="20" HorizontalAlignment="Center" Content="Panel zarządzania kluczami"/>
        <DataGrid x:Name="keysDataGrid" AutoGenerateColumns="False" EnableRowVirtualization="True" Height="187" ItemsSource="{Binding}" Margin="99,0,93,0" RowDetailsVisibilityMode="VisibleWhenSelected">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="id_keyColumn" Binding="{Binding id_key}" Header="id key" Width="SizeToHeader"/>
                <DataGridTextColumn x:Name="room_nameColumn" Binding="{Binding room_name}" Header="room name" Width="SizeToHeader"/>
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
